<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarcaCorrida" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/light_gray</item>
        <item name="colorOnPrimary">@color/almost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarForeground">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/gray</item>-->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>


        <!-- Text-->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>
        <item name="android:textAppearanceSmall">
            @style/Theme.MarcaCorrida.TextAppearance.Small
        </item>

        <item name="alertDialogTheme">@style/Theme.MarcaCorrida.Dialog.Alert</item>


    </style>

    <style name="Theme.MarcaCorrida.TextAppearance.Small" parent="Theme.MarcaCorrida">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.MarcaCorrida.Dialog.Alert" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="Theme.MarcaCorrida.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MarcaCorrida.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MarcaCorrida.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>